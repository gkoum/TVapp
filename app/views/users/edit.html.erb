<% provide(:title, "Edit user") %>
<div class="container">

  <div class="form-signin" role="form">
    <h2 class="form-signin-heading">
  Επεξεργασία Χρήστη</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name, "Όνομα Χρήστη" %>
      <%= f.text_field :name, :class => "form-control" %>

      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control" %>

      <%= f.label :password, "Κωδικός Πρόσβασης" %>
      <%= f.password_field :password, :class => "form-control" %>

      <%= f.label :password_confirmation, "Επιβεβαίωση Κωδικού Πρόσβασης" %>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
      
      <%= f.label :username, "Όνοματεπώνυμο Χρήστη" %>
      <%= f.text_field :username, :class => "form-control" %>

      <%= f.label :address, "Διεύθυνση" %>
      <%= f.password_field :address, :class => "form-control" %>
      <% if signed_in? and @user.admin? %>
        
          <%= f.label :shopnumber, "Αριθμός Πρακτορείου" %>
          <%= f.password_field :shopnumber, :class => "form-control" %>
        
      <% end %>
      <%= f.label :phone, "Τηλέφωνο" %>
      <%= f.password_field :phone, :class => "form-control" %>

      <%= f.label :mobile, "Κινητό Τηλέφωνο" %>
      <%= f.password_field :mobile, :class => "form-control" %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
