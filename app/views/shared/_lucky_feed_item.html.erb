<% if lucky_feed_item.category == "lucky" %>

  <li align=left id="<%= lucky_feed_item.id %>" class="feed">
    <div  hidden class="content"><%= lucky_feed_item.content %></div>  
      <% if lucky_feed_item.image_url != nil %>
        <img hidden class="avatar" src=<%= lucky_feed_item.image_url(:thumb).to_s %> alt="Avatar">
        <img hidden class="logogif" src="/assets/loading.gif" alt="Logogif">
        <canvas class="myCanvas" width="400" height="200" style="border:1px "></canvas>
      <% end %>
      <span class="timestamp">
        Posted <%= time_ago_in_words(lucky_feed_item.created_at) %> ago.
      </span>
      <% if current_user?(lucky_feed_item.user) %>
        <%= link_to "Διαγραφή σχολίου", lucky_feed_item, method: :delete,
                                     data: { confirm: "Είστε σίγουρος για την διαγραφή του σχολίου;" },
                                     title: lucky_feed_item.content %>
      <% end %>

  </li>

  <% end %>