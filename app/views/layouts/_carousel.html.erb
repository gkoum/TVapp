<!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class=""></li>
        <li class="" data-target="#myCarousel" data-slide-to="1"></li>
        <li class="active" data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="item">
          <%= link_to image_tag("Football-Bet4.jpg", alt: "Rails"), signup_path %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Γίνε Μέλος Σήμερα</h1>
              <p>Της μεγαλύτερης κοινότητας πρακτορείων ΟΠΑΠ στην Ελλάδα</p>
              <p><%= link_to "Εγγραφείτε σήμερα!", signup_path, class: "btn btn-lg btn-primary" %></p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= link_to image_tag("Football-Bet1.jpg", alt: "Rails"), galery_path %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Νέα-Ειδήσεις</h1>
              <p>Τα πάντα για το στοίχημα και τα παιχνίδια του ΟΠΑΠ</p>
              <p><%= link_to "Νέα-Ειδήσεις", news_path, class: "btn btn-lg btn-primary" %></p>
            </div>
          </div>
        </div>
        <div class="item active">
          <%= link_to image_tag("Football-Bet2.jpg", alt: "Rails"), galery_path %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Το Πρακτορείο μας!</h1>
              <p>Ζωντανή περιήγηση, φωτογραφίες και άλλα πολλά...</p>
              <p><%= link_to "Οι Φωτογραφίες μας", galery_path, class: "btn btn-lg btn-primary" %></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div><!-- /.carousel -->